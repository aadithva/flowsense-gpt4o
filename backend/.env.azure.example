PORT=3002
PROCESSOR_WORKER_ID=worker-azure
WEBHOOK_SECRET=replace-with-strong-webhook-secret

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
