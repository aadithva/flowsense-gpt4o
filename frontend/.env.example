# Frontend server runtime
APP_BASE_URL=http://localhost:3000
AUTH_SESSION_SECRET=replace-with-a-32-char-min-secret

# Microsoft Entra OIDC
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_ID=your-client-id
ENTRA_CLIENT_SECRET=your-client-secret
ENTRA_REDIRECT_PATH=/auth/callback

# Azure SQL (managed identity token auth)
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=your-database

# Azure Blob Storage (managed identity only)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_CONTAINER=videos

# Processor webhook
PROCESSOR_WEBHOOK_SECRET=replace-with-strong-webhook-secret
PROCESSOR_BASE_URL=https://your-processor-host

# Optional observability
# APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=...
